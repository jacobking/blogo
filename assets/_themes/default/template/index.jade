extends ./module/layout.jade
block title
	title #{config.blogName}
	meta(charset='utf-8')
	link(rel='stylesheet',type='text/css',href='/resource/css/base.css')
	link(rel='stylesheet',type='text/css',href='/resource/css/home.css')
	script(type='text/javascript',src='/resource/js/jquery-2.1.3.min.js')
block content
	h1.title #{config.blogName}

	h3 Articles
	ul.article_list
		each blog in post.articles
			li 
				a(href='#{blog.link}') #{blog.title}
				span.time #{blog.year}-#{blog.month}-#{blog.day}

	h3.tags Tags
	ul.tag_list
		each result in post.tags.list
			li 
				a(href='#{result.link}') #{result.name}